{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "./dist",  // The output directory for compiled .js files
      // The root directory of your TypeScript source files
    "target": "esnext",  // Target ECMAScript version (can be ES2016, ES2020, etc.)
    "strict": true,      // Enable strict type checking
    "esModuleInterop": true  // Enable interoperability between CommonJS and ES modules
  },
  "include": ["src/**/*", "db/**/*.ts" ],  // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]  // Exclude the node_modules folder
}